<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools"
            xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color (white) -->
    <item android:height="@dimen/dot_height"
          android:width="@dimen/dot_weight">
        <shape android:shape="oval">
            <gradient
                    android:gradientRadius="@dimen/gradient_radius"
                    android:type="radial"
                    android:startColor="@color/gradient_start_color"
                    android:centerColor="@color/gradient_center_color"
                    android:endColor="@color/gradient_end_color"
            />
        </shape>
    </item>
    <item android:start="@dimen/dot_padding_end"
          android:top="@dimen/dot_padding_end"
          android:end="@dimen/dot_padding_end"
          android:bottom="@dimen/dot_padding_end" tools:ignore="UnusedAttribute">
        <shape android:shape="oval">
            <solid android:color="@color/dot_color_blue"/>
        </shape>
    </item>

</layer-list>